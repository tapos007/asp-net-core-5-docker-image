pipeline {
    agent any
    environment {
        registry = "https://hub.docker.com/repository/docker/tapos007/dotnet-test"
        registryCredential = 'dockerhub'
    }
    stages {
        stage('Clean') {
            steps {                
                echo 'Clear Started...'
                sh 'dotnet clean -c Release'
                echo 'Clear Completed...'
            }
        }
        stage('Build') {
            steps {
                echo 'Build Started...'
                sh 'dotnet build -c Release'
                echo 'Build Completed...'
            }
        }
        stage('Test') {
            steps {
                echo 'Test Started..'
                sh 'dotnet test tests/BLL.UnitTests'
                echo 'Test Completed..'
            }
        } 
    }
    post {
        always {
            echo 'One way or another, I have finished'
            deleteDir() /* clean up our workspace */
        }
        success {
            echo 'I succeeded!'
        }
        unstable {
            echo 'I am unstable :/'
        }
        failure {
            echo 'I failed :('
        }
        changed {
            echo 'Things were different before...'
        }
    }
}