pipeline {
    agent any
    environment {
        registry = "tapos007/dotnet-test"
        registryCredential = 'docker'
    }
    stages {
        stage('Clean') {
            steps {                
                echo 'Clear Started...'
                sh 'dotnet clean -c Release'
                echo 'Clear Completed...'
            }
        }
        stage('Build') {
            steps {
                echo 'Build Started...'
                sh 'dotnet build -c Release'
                echo 'Build Completed...'
            }
        }
        stage('Test') {
            steps {
                echo 'Test Started..'
                sh 'dotnet test tests/BLL.UnitTests'
                echo 'Test Completed..'
            }
        } 
        stage('publish docker') {
            steps {
                echo 'push docker server Started..'
                withCredentials([usernamePassword(credentialsId: "$registryCredential", passwordVariable: 'DOCKER_REGISTRY_PWD', usernameVariable: 'DOCKER_REGISTRY_USER')]) {
                    sh "docker build . -t $registry:$BUILD_NUMBER  -f src/API/Dockerfile"
                    sh "docker login -u ${DOCKER_REGISTRY_USER} -p ${DOCKER_REGISTRY_PWD}"
                    sh "docker push $registry:$BUILD_NUMBER"
                }
                echo 'push docker server Completed..'
            }
        } 
    }
    post {
        always {
            echo 'One way or another, I have finished'
            deleteDir() /* clean up our workspace */
        }
        success {
            echo 'I succeeded!'
        }
        unstable {
            echo 'I am unstable :/'
        }
        failure {
            echo 'I failed :('
        }
        changed {
            echo 'Things were different before...'
        }
    }
}